  },
  "homepage": "https://github.com/bartholomej/csfd-magnets#readme",
  "dependencies": {
    "es6-promise": "^4.2.4",
    "webpack-cli": "^3.0.8",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^5.0.0",
    "exports-loader": "^0.7.0",
    "imports-loader": "^0.8.0",
    "webpack": "^4.12.0",
    "webpack-chrome-extension-reloader": "^1.0.0",
    "webpack-merge": "^4.1.3",
    "zip-webpack-plugin": "^3.0.0"
