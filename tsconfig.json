{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es7"],
    "types": ["chrome", "node"],
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@services/*": ["services/*"]
    },
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  }
}
